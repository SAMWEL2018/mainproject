<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Documentation">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="30dp"
        android:layout_margin="25dp"
        app:cardCornerRadius="10dp"
        android:padding="16dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOCUMENTATION"
                android:layout_centerHorizontal="true"
                android:id="@+id/heading"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_below="@id/heading"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:transitionName="docs"
                android:src="@drawable/ic_documentation"
                android:id="@+id/docu"
                android:layout_centerHorizontal="true"
                />

            <TextView

                android:layout_below="@id/docu"
                android:id="@+id/rec"
                android:textColor="#000"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/farm_docs" />
            <RelativeLayout

                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEVELOPER"
                        android:textStyle="italic"
                        android:id="@+id/dev"
                        android:textColor="#000"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="samwelwafula2018@gmail.com"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="13sp"

                        />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>